{
  "name": "docsync",
  "version": "1.1.0",
  "description": "Obsidian â†’ Feishu/Lark document sync tool with desktop GUI",
  "main": "electron_main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "test:e2e": "playwright test",
    "build-python": "cd .. && pyinstaller --onefile --name feishu-sync-core --distpath electron-app/resources/python --workpath electron-app/build/python --specpath electron-app/build/python main.py",
    "pack": "electron-builder --dir",
    "dist": "npm run build-python && electron-builder"
  },
  "author": "FeishuSync Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.docsync.app",
    "productName": "DocSync",
    "directories": {
      "buildResources": "build-assets"
    },
    "files": [
      "electron_main.js",
      "gui/**/*",
      "resources/python/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/python",
        "to": "python",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build-assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build-assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build-assets/icon.png"
    }
  }
}
